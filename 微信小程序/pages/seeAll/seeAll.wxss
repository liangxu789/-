/* pages/seeAll/seeAll.wxss */
.page_title .back{
  position: absolute;
  left: 1.5em;
  top: 1em;
  width: 1em;
  height: 1em;
}
.page_title .info{
  font-size: 18px;
  line-height: 3em;
  color: grey;
}
.sec_title{
  margin-top: 4.5em;
  width: 100%;
  height: 2.5em;
  display: flex;
  border-bottom: 1px solid #e8e8e8;
}

.sec_title .title_new{
  text-align: center;
  line-height: 3em;
  margin-left: 15%;
  display: inline-block;
  width: 50px;
  height: 95%;
  font-size: 12px;
  color: #C1C1C1;
  font-weight: bold;
}
.sec_title .title_all{
  text-align: center;
  line-height: 3em;
  margin-left: 15%;
  display: inline-block;
  width: 50px;
  height: 95%;
  font-size: 13px;
  font-weight: bold;
  border-bottom: 5px solid #ffc12b;
}
.sec_title image{
  text-align: center;
  margin-top: 10px;
  margin-left: 15%;
  width: 30px;
  height: 23px;
  font-size: 13px;
  font-weight: bold;
}

.all_content{
  width: 100%;
  height: 600px;
  background-color: #e8e8e8e8;
  padding: 10px 10px;
}
.all_content .content_tip{
  margin-top: 10px;
  width: 92%;
  height: 50px;
  background-color: white;
  padding: 5px 5px;
  position: relative;
  border-radius: 2px;
  border: 2px solid #DDDDDD;
}

.all_content .content_tip .content_time{
  font-weight: bold;
  font-size: 15px;
}
.all_content .content_tip .content_thing{
  font-size: 13px;
}

.all_content .content_tip .content_gou{
  width: 30px;
  height: 30px;
  position: absolute;
  left: 80%;
  top: 12px;
}