/* pages/new_course/course.wxss */
.page_title1{
  width: 100%;
  height: 3em;
  text-align: center;
  position: relative;
  border-bottom: 1px solid #e8e8e8e8;
}
.page_title1 .back{
  position: absolute;
  left: 1.5em;
  top: 1em;
  width: 1em;
  height: 1em;
}
.page_title1 .info{
  font-size: 18px;
  line-height: 3em;
}
.sec_title{
  display: flex;
  height: 2em;
  box-shadow: 0px 0px 3px #e8e8e8e8;
}
.sec_title > view{
  width: 50%;
  text-align: center;
  font-size: 16px;
  line-height: 2em;
}
.sec_title > view.active {
  border-bottom: 3px solid #ffc12b;
}
.content{
  position: relative;
  width: 100%;
  height: 550px;
  background-color: #e8e8e8e8;
}
.content .shadow1{
  width: 300px;
  height: 400px;
  position: absolute;
  top: 50px;
  left: 50px;
  border-radius: 20px;
  background-color: rgba(172, 171, 173, 0.137);
  z-index: 2;
}
.content .shadow2{
  width: 290px;
  height: 400px;
  position: absolute;
  top: 55px;
  left: 48px;
  border-radius: 10px;
  background-color: rgba(172, 171, 173, 0.295);
  z-index: 3;
}
.content .mind_content{
  width: 280px;
  height: 400px;
  position: absolute;
  top: 60px;
  left: 45px;
  border-radius: 10px;
  background-color: white;
  z-index: 4;
  text-align: center;
}
.content .mind_content image{
  width: 280px;
  height: 150px;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.content .mind_content text{
  font-size: small;
  font-weight: bold;
}
.content .mind_content .content_state{
  margin: 1em;
  text-align: left;
  font-size: 18px;
  font-weight: bold;
}
.content .mind_content .button_style{
  width: 50%;
  color: white;
  text-align: center;
  height: 40px;
  font-size: small;
  line-height: 40px;
  border-radius: 10px;
  margin-left: 25%;
  margin-bottom: 10px;
}
.content .mind_content .color1{
  background-color: #42323C;
}
.content .mind_content .color2{
  background-color: #ffc12b;
}