.container2{
  position: relative;
  margin-top: 4.5em;
}
.page_title .back{
  position: absolute;
  left: 1.5em;
  top: 1em;
  width: 1em;
  height: 1em;
}
.page_title .info{
  font-size: 18px;
  line-height: 3em;
}
.img{
  width: 100%;
  height: 220px;
  display: inline-block;
  position: relative;
  z-index: 1;
}
.img .title{
  width: 80%;
  color: white;
  position: absolute;
  top: 40%;
  left: 10%;
}
.img .tip{
  width: 50%;
  font-size: 15px;
  position: absolute;
  color: white;
  top: 70%;
  left: 10%;
}
.shidow1{
  width: 90%;
  height: 130px;
  position: absolute;
  background-color: #e8e8e8e8;
  top: 95%;
  left: 5%;
  z-index: 0;
  border-radius: 3px;
}
.window1{
  width: 88%;
  height: 128px;
  position: absolute;
  background-color: white;
  top: 95%;
  left: 6%;
  z-index: 3;
  border-radius: 3px;
  display: flex;
}
.window1 .head_icon{
  height: 100%;
  width: 40%;
}
.window1 image{
  margin-top: 25px;
  margin-left: 30px;
  height: 80px;
  width: 80px;
  border-radius: 50%;
}
.window1 .introduce{
  width: 60%;
  height: 100%;
}
.window1 .introduce .text1{
  font-size: 15px;
  display: block;
  margin-top: 20px;
}
.window1 .introduce .text2{
  font-size: 12px;
  display: block;
  margin-top: 20px;
}
.window1 .introduce .text3{
  font-size: 12px;
  display: block;
  margin-top: 5px;
}

.day_read{
  width: 90%;
  margin-left: 5%;
  margin-top: 40%;
}
.day_read .day_read_title{
  height: 24px;
  width: 100%;
  border-bottom: 1px solid black;
  display: flex;
}
.day_read .day_read_title image{
  height: 18px;
  width: 18px;
  margin-top: 2px;
}

.day_read .day_read_title text{
  font-size: 15px;
  margin-left: 10px;
}
.day_read_content{
  font-size: 15px;
}
.practice{
  margin-top: 20px;
  padding: 10px;
  background-color: #e8e8e8;
}
.practice text{
  font-size: 12px;
}
.player{
  position: fixed;
  width: 100%;
  height: 80px;
  bottom: 0;
  left: 0;
  background-color: white;
  border-top: 1px solid #e8e8e8;
}
.player .active_progress{
  width: 100%;
  height: 30px;
  display: flex;
}
.player .active_progress progress{
  margin: 0.7em;
  width: 65%;
  display: inline-block;
  line-height: 30px;
}
.player .active_progress text{
  height: 30px;
  font-size: 15px;
  line-height: 30px;
}
.player .active_progress .active_time{
  margin-left: 1em;
}

.player .operation{
  height: 50px;
  width: 100%;
  display: flex;
}

.player .operation .back10{
  width: 30px;
  height: 30px;
  margin-left: 30%;
  margin-top: 5px;
}

.player .operation .play{
  width: 40px;
  height: 40px;
  margin-left: 5%;
}

.player .operation .forward10{
  width: 30px;
  height: 30px;
  margin-left: 5%;
  margin-top: 5px;
}